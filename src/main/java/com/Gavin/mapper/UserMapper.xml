<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Gavin.mapper.UserMapper">

    <select id="findUserByAccount" parameterType="string" resultType="com.Gavin.bean.User">
        select * from user
        where account=#{account}
    </select>

    <insert id="addUser" parameterType="com.Gavin.bean.User">
        insert into user(id,account,password,email,companyname,time)
        values(#{id},#{account},#{password},#{email},#{companyname},#{time})
    </insert>

    <update id="updateUserByAccount" parameterType="com.Gavin.bean.User">
        UPDATE user SET password=#{param2} where account=#{param1}
    </update>
</mapper>